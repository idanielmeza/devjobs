<main class="contenedor">
    <form action="/users/editar-perfil" method="post" class='default-form' enctype="multipart/form-data">
        <div class="d-flex">
            <img src="/uploads/perfiles/{{usuario.imagen}}" class="imagen-perfil-editar mx-auto">
        </div>
        

        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="nombre" placeholder="Tu Nombre" value="{{usuario.nombre}}">
        </div>

        <div class="campo">
            <label for="">E-mail</label>
            <input type="email" name="email" placeholder="Tu E-mail" value={{usuario.email}}>
        </div>

        <div class="campo">
            <label for="">Contrase√±a</label>
            <input type="password" name="password" placeholder="Tu Contrasena">
        </div>
        
        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
        </div>
        
        <div class="campo">
            <input type="submit" value="Guardar" class='btn btn-azul'>
        </div>



    </form>
</main>
<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method='POST' class="default-form">
        <H3>Informacion General</H3>

        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej: Angular Dev" value={{vacante.titulo}} required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Ej: DevJobs" value={{vacante.empresa}} required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicacion</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej: Veracruz,Mx" value={{vacante.ubicacion}} required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" id="salario" placeholder="Ej: 1800 USD" value={{vacante.salario}} required>
        </div>

        <div class="campo">
            <label>Contrato</label>
            <select name='contrato'>
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>--Seleccionar--</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descripcion del Puesto</h3>

        <div class="campo descripcion">
            <label >Descripcion</label>
            <input type="hidden" id="x" value="{{{vacante.descripcion}}}" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type='hidden' name='skills' id='skills'>
            <input type="submit" value="Guardar" class='btn btn-azul'>
        </div>

    </form>
</main>